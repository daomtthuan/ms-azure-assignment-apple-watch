<!DOCTYPE html>

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  @Styles.Render("~/bundles/styles")
  @RenderSection("Style", required: false)

  <title>Apple Watch - @ViewBag.Title</title>
</head>
<body>
  <header class="sticky-top">
    <nav class="navbar navbar-dark bg-dark navbar-expand-lg shadow">
      <div class="container-fluid">
        <a class="navbar-brand h1 mb-0" href="#">Apple Watch</a>
        <button class="btn btn-light d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
          <i class="fa-solid fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbar">
          <ul class="navbar-nav me-auto mb-lg-0 mt-1">
            <li class="nav-item">
              @Components.Layout.NavbarLinkItem(title: "Home", url: Url.Action("Index", "Home"), active: ViewBag.Url == "Home/Index")
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <main class="mt-3">
    @RenderBody()
  </main>

  <footer class="border-top shadow">
    <div class="bg-light py-3">
      <div class="container">
        <div class="row g-2 row-cols-md-2 row-cols-lg-4">
          <div class="col">
            <h5>Tìm cửa hàng</h5>
            <ul class="list-unstyled">
              <li><a href="#" class="text-dark">Tìm cửa hàng gần nhất</a></li>
              <li><a href="#" class="text-dark">Mua hàng từ xa</a></li>
              <li><a href="#" class="text-dark">Gặp trực tiếp cửa hàng gần nhất</a></li>
            </ul>
          </div>
          <div class="col">
            <h5>Đặt hàng</h5>
            <ul class="list-unstyled">
              <li><a href="#" class="text-dark">Gọi mua hàng 18xx.xxxx (8h00 - 22h00)</a></li>
              <li><a href="#" class="text-dark">Gọi mua hàng 18xx.xxxx (8h00 - 21h00)</a></li>
              <li><a href="#" class="text-dark">Gọi mua hàng 18xx.xxxx (8h00 - 21h30)</a></li>
            </ul>
          </div>
          <div class="col">
            <h5>Hỗ trợ</h5>
            <ul class="list-unstyled">
              <li><a href="#" class="text-dark">Mua hàng và thanh toán Online</a></li>
              <li><a href="#" class="text-dark">Mua hàng trả góp Online</a></li>
              <li><a href="#" class="text-dark">Tra thông tin đơn hàng</a></li>
            </ul>
          </div>
          <div class="col">
            <h5>Chính sách, ưu đãi</h5>
            <ul class="list-unstyled">
              <li><a href="#" class="text-dark">Ưu đãi thanh toán</a></li>
              <li><a href="#" class="text-dark">Quy chế hoạt động</a></li>
              <li><a href="#" class="text-dark">Chính sách Bảo hành</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="bg-dark text-bg-dark">
      <div class="container py-3">
        <div class="row g-2 row-cols-md-2 row-cols-lg-4">
          <div class="col">
            <h6>Điện thoại iPhone</h6>
            <ul class="list-unstyled">
              <li><a href="#" class="text-light">Điện thoại iPhone 13 / 13 Pro Max</a></li>
              <li><a href="#" class="text-light">Điện thoại iPhone 12 / 11</a></li>
              <li><a href="#" class="text-light">iPhone cũ giá rẻ / iPhone cũ</a></li>
            </ul>
          </div>
          <div class="col">
            <h6>Điện thoại Samsung</h6>
            <ul class="list-unstyled">
              <li><a href="#" class="text-light">Điện thoại Samsung</a></li>
              <li><a href="#" class="text-light">Điện thoại Samsung</a></li>
              <li><a href="#" class="text-light">Điện thoại OPPO - Xiaomi - Nokia</a></li>
            </ul>
          </div>
          <div class="col">
            <h6>Máy tính Laptop</h6>
            <ul class="list-unstyled">
              <li><a href="#" class="text-light">Laptop HP – Dell – Microsoft Surface</a></li>
              <li><a href="#" class="text-light">Laptop Acer – Lenovo – ASUS</a></li>
              <li><a href="#" class="text-light">Máy tính – Màn hình</a></li>
            </ul>
          </div>
          <div class="col">
            <h6>Phụ kiện - Nhà thông minh</h6>
            <ul class="list-unstyled">
              <li><a href="#" class="text-light">Camera  – Camera hành trình</a></li>
              <li><a href="#" class="text-light">Bàn ghế công thái học</a></li>
            </ul>
          </div>
        </div>
      </div>

    </div>
  </footer>

  @Scripts.Render("~/bundles/scripts")
  @RenderSection("Script", required: false)
</body>
</html>
